<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools" android:orientation="vertical"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@mipmap/blue_background"
            android:id="@+id/imageView_to_row"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            android:text="This is my text, This is my text, This is my text"
            android:background="@drawable/message_round"
            android:padding="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:id="@+id/textView_to_row"
            android:maxWidth="180dp"
            app:layout_constraintTop_toTopOf="@+id/imageView_to_row"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@+id/imageView_to_row"/>
</androidx.constraintlayout.widget.ConstraintLayout>